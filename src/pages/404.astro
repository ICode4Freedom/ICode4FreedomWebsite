---
import BaseLayout from '../layouts/BaseLayout.astro';

// Get recent posts for suggestions
const allPostsRaw = Object.values(import.meta.glob('./blogs/*.md', { eager: true }));
const recentPosts = allPostsRaw
  .filter((post: any) => post.rawContent && post.rawContent().trim().length > 0)
  .sort((a: any, b: any) => new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime())
  .slice(0, 3);
---

<BaseLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist.">
  <div class="error-page">
    <div class="error-container">
      <div class="terminal-box">
        <div class="error-code">$ cat page.md</div>
        <div class="error-output">cat: page.md: No such file or directory</div>
        <div class="error-code error-404">ERROR 404</div>
      </div>
      
      <h1>Page Not Found</h1>
      <p class="error-desc">The page you're looking for doesn't exist or has been moved.</p>
      
      <div class="actions">
        <a href="/" class="btn primary">‚Üê Go Home</a>
        <a href="/blogs/1" class="btn">Read Latest Post</a>
      </div>
      
      <div class="suggestions">
        <h2>Recent Posts</h2>
        <ul>
          {recentPosts.map((post: any) => (
            <li>
              <a href={post.url}>{post.frontmatter.title}</a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .error-page {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }
  
  .error-container {
    text-align: center;
    max-width: 500px;
  }
  
  .terminal-box {
    background: var(--term-bg);
    border: 2px solid var(--terminal-green);
    border-radius: 4px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    text-align: left;
    font-family: var(--font-mono);
  }
  
  .error-code {
    color: var(--terminal-green);
    margin-bottom: 0.5rem;
  }
  
  .error-output {
    color: #ff6b6b;
    margin-bottom: 1rem;
  }
  
  .error-404 {
    font-size: 2rem;
    font-weight: bold;
    text-align: center;
    margin-top: 1rem;
    text-shadow: 0 0 10px var(--terminal-green);
  }
  
  h1 {
    margin-bottom: 0.5rem;
  }
  
  .error-desc {
    color: var(--fg-d);
    margin-bottom: 1.5rem;
  }
  
  .actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 2rem;
  }
  
  .btn {
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--fg-d);
    border-radius: 4px;
    text-decoration: none;
    color: var(--fg);
    font-family: var(--font-mono);
    transition: all 0.2s;
  }
  
  .btn:hover {
    border-color: var(--terminal-green);
    color: var(--terminal-green);
  }
  
  .btn.primary {
    background: var(--terminal-green);
    border-color: var(--terminal-green);
    color: var(--bg);
  }
  
  .btn.primary:hover {
    opacity: 0.9;
  }
  
  .suggestions {
    text-align: left;
    border-top: 1px dashed var(--fg-d);
    padding-top: 1.5rem;
  }
  
  .suggestions h2 {
    font-size: 0.9rem;
    color: var(--fg-d);
    margin-bottom: 0.75rem;
  }
  
  .suggestions ul {
    list-style: none;
    padding: 0;
  }
  
  .suggestions li {
    margin: 0.5rem 0;
  }
  
  .suggestions a {
    color: var(--terminal-green);
    text-decoration: none;
  }
  
  .suggestions a:hover {
    text-decoration: underline;
  }
</style>
