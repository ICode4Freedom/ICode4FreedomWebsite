---
// Lightbox component for blog images - click to enlarge
---

<div class="lightbox-overlay" id="lightbox-overlay">
  <div class="lightbox-content">
    <button class="lightbox-close" aria-label="Close lightbox">&times;</button>
    <img id="lightbox-img" src="" alt="" />
    <p class="lightbox-caption" id="lightbox-caption"></p>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const overlay = document.getElementById('lightbox-overlay');
    const lightboxImg = document.getElementById('lightbox-img') as HTMLImageElement;
    const lightboxCaption = document.getElementById('lightbox-caption');
    const closeBtn = document.querySelector('.lightbox-close');
    
    if (!overlay || !lightboxImg || !lightboxCaption) return;
    
    // Make all blog images clickable
    const blogImages = document.querySelectorAll('.blog-content img, .image-content img, .text-content img');
    
    blogImages.forEach((img) => {
      const imgEl = img as HTMLImageElement;
      imgEl.classList.add('lightbox-trigger');
      imgEl.style.cursor = 'pointer';
      
      imgEl.addEventListener('click', () => {
        lightboxImg.src = imgEl.src;
        lightboxImg.alt = imgEl.alt;
        
        // Check for caption (figcaption or alt text)
        const figure = imgEl.closest('figure');
        const figcaption = figure?.querySelector('figcaption');
        lightboxCaption.textContent = figcaption?.textContent || imgEl.alt || '';
        
        overlay.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    });
    
    // Close lightbox
    function closeLightbox() {
      overlay.classList.remove('active');
      document.body.style.overflow = '';
    }
    
    overlay.addEventListener('click', (e) => {
      if (e.target === overlay) closeLightbox();
    });
    
    closeBtn?.addEventListener('click', closeLightbox);
    
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeLightbox();
    });
  });
</script>

<style>
  .lightbox-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10001;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
  }
  
  .lightbox-overlay.active {
    opacity: 1;
    visibility: visible;
  }
  
  .lightbox-content {
    position: relative;
    max-width: 90vw;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .lightbox-close {
    position: absolute;
    top: -40px;
    right: 0;
    background: none;
    border: 2px solid var(--terminal-green);
    color: var(--terminal-green);
    font-size: 2rem;
    width: 40px;
    height: 40px;
    cursor: pointer;
    font-family: var(--font-mono);
    transition: all 0.2s;
  }
  
  .lightbox-close:hover {
    background: var(--terminal-green);
    color: var(--bg);
  }
  
  #lightbox-img {
    max-width: 100%;
    max-height: 80vh;
    object-fit: contain;
    border: 2px solid var(--terminal-green);
    box-shadow: 0 0 20px rgba(0, 255, 0, 0.3);
  }
  
  .lightbox-caption {
    margin-top: 1rem;
    color: var(--fg);
    font-family: var(--font-mono);
    font-size: 0.9rem;
    text-align: center;
    max-width: 100%;
  }
  
  /* Style for clickable images */
  :global(.lightbox-trigger) {
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  :global(.lightbox-trigger:hover) {
    transform: scale(1.02);
    box-shadow: 0 0 15px rgba(0, 255, 0, 0.4);
  }
</style>
