---
// Author card component
interface Props {
  name?: string;
}

const { name = "Mike" } = Astro.props;
---

<div class="author-card">
  <span class="label">by</span>
  <span class="name">{name}</span>
</div>

<style>
  .author-card {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
  }
  
  .label {
    color: var(--fg-d);
  }
  
  .name {
    color: var(--fg);
  }
</style>
