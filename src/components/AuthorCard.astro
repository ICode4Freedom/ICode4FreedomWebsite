---
// Author card component for blog posts
interface Props {
  name?: string;
}

const { name = "Mike" } = Astro.props;
---

<div class="author-card">
  <div class="author-avatar">
    <span class="avatar-icon">Î»</span>
  </div>
  <div class="author-info">
    <span class="author-label">Written by</span>
    <span class="author-name">{name}</span>
  </div>
</div>

<style>
  .author-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid var(--fg-d);
    border-left: 3px solid var(--terminal-green);
    background: var(--ui-bg);
  }
  
  .author-avatar {
    width: 50px;
    height: 50px;
    border: 2px solid var(--terminal-green);
    border-radius: 4px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: var(--bg);
  }
  
  .avatar-icon {
    font-size: 1.8rem;
    color: var(--terminal-green);
    font-family: var(--font-mono);
  }
  
  .author-info {
    display: flex;
    flex-direction: column;
  }
  
  .author-label {
    font-size: 0.75rem;
    color: var(--fg-d);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .author-name {
    font-size: 1.1rem;
    color: var(--terminal-green);
    font-weight: bold;
  }
</style>
