---
// Component for Blogposts on Home Page (index.astro)

interface Props {
  url: string;
  title: string;
  description: string;
  pubDate: Date;
  tags?: string[];
  featured?: boolean;
  image?: string;
}

const { url, title, description, pubDate, tags = [], featured = false, image } = Astro.props;
---

<li class:list={["blogpost", { featured }]}>
  <div class="blog-content">
    {image && (
      <div class="blog-thumbnail">
        <img src={image} alt={title} loading="lazy" />
      </div>
    )}
    <div class="blog-text">
      <div class="title-row">
        <a class="title-link" href={url}>{title}</a>
        {featured && <span class="new-badge">New</span>}
      </div>
      <p class="pub-date">{pubDate.toString().slice(0, 10)}</p>
      <p class="description">{description}</p>
    </div>
  </div>
  {tags.length > 0 && (
    <p class="tags">{tags.join(' Â· ')}</p>
  )}
</li>

<style>
  .blogpost {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    margin-bottom: 1rem;
    list-style: none;
    border: 1px solid var(--fg-d);
    background: var(--ui-bg);
  }

  .blogpost.featured {
    border-color: var(--terminal-green);
  }

  .blog-content {
    display: flex;
    gap: 1rem;
  }

  .blog-thumbnail {
    width: 60px;
    height: 60px;
    flex-shrink: 0;
    overflow: hidden;
  }

  .blog-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-text {
    flex: 1;
    min-width: 0;
  }

  .title-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .title-link {
    text-decoration: none;
    font-size: 1.1rem;
    color: var(--fg);
  }

  .title-link:hover {
    text-decoration: underline;
  }

  .new-badge {
    font-size: 0.65rem;
    padding: 0.15rem 0.4rem;
    background: var(--terminal-green);
    color: var(--bg);
    font-weight: bold;
    text-transform: uppercase;
  }

  .pub-date {
    font-size: 0.75rem;
    color: var(--fg-d);
    margin: 0.25rem 0;
  }

  .description {
    font-size: 0.85rem;
    color: var(--fg);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tags {
    margin: 0;
    margin-top: 0.75rem;
    padding-top: 0.5rem;
    border-top: 1px dashed var(--fg-d);
    font-size: 0.7rem;
    color: var(--fg-d);
  }
</style>
