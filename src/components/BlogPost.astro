---
// Component for Blogposts on Home Page (index.astro)
// Supports featured posts and optional thumbnail images

interface Props {
  url: string;
  title: string;
  description: string;
  pubDate: Date;
  tags?: string[];
  featured?: boolean;
  image?: string;
}

const { url, title, description, pubDate, tags = [], featured = false, image } = Astro.props;
---

<li class:list={["blogpost", { featured }]}>
  {featured && <span class="featured-badge">‚≠ê Featured</span>}
  <div class="blog-content">
    {image && (
      <div class="blog-thumbnail">
        <img src={image} alt={title} loading="lazy" />
      </div>
    )}
    <div class="blog-text">
      <a class="title-link" href={url}>{title}</a>
      <div class="blog-info">
        <p class="pub-date">{pubDate.toString().slice(0, 10)}</p>
        <p class="description"><u>Description:</u> {description}</p>
      </div>
    </div>
  </div>
  {tags.length > 0 && (
    <p class="tags">Tags: {tags.join(', ')}</p>
  )}
</li>

<style>
  .blogpost {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    min-height: 8rem;
    height: auto;
    max-height: 14rem;
    margin-bottom: 1.5rem;
    list-style: none;
    border-style: solid;
    border-width: 0.25rem;
    border-radius: 0.25rem;
    border-color: var(--fg);
    overflow: hidden;
    box-sizing: border-box;
    transition: border-color 0.3s, background-color 0.3s;
  }

  .blogpost.featured {
    border-color: var(--featured-border);
    background-color: var(--featured-bg);
    position: relative;
  }

  .featured-badge {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: var(--featured-border);
    color: var(--bg);
    padding: 0.2rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.7rem;
    font-weight: bold;
  }

  .blog-content {
    display: flex;
    gap: 1rem;
    flex: 1;
    overflow: hidden;
  }

  .blog-thumbnail {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
    border-radius: 0.25rem;
    overflow: hidden;
    background: var(--ui-bg);
  }

  .blog-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-text {
    flex: 1;
    overflow: hidden;
  }

  .title-link {
    text-decoration: none;
    font-size: clamp(1rem, 2.5vw, 1.5rem);
    word-wrap: break-word;
    overflow-wrap: break-word;
    color: var(--fg);
  }

  .title-link:hover {
    text-decoration: underline;
    color: var(--fg-d);
  }

  .blog-info {
    flex: 1;
    overflow: hidden;
    margin-top: 0.5rem;
  }

  .blog-info p {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin: 0.25rem 0;
    line-height: 1.4;
    font-size: clamp(0.6rem, 1.5vw, 0.9rem);
    padding-left: 0.15rem;
  }

  .description {
    -webkit-line-clamp: 2;
  }

  .tags {
    margin: 0;
    margin-top: auto;
    padding-top: 0.5rem;
    color: var(--fg-d);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: clamp(0.6rem, 1.5vw, 0.9rem);
    padding-left: 0.15rem;
  }
</style>
