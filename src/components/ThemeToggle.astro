---
// Minimal theme toggle - positioned in navbar
---

<button id="theme-toggle" class="theme-toggle" title="Toggle theme">
  <span class="icon-dark">☀</span>
  <span class="icon-light">☽</span>
</button>

<script>
  function initTheme() {
    const saved = localStorage.getItem('theme') || 'dark';
    document.documentElement.setAttribute('data-theme', saved);
    updateIcon(saved);
  }

  function updateIcon(theme: string) {
    const dark = document.querySelector('.icon-dark') as HTMLElement;
    const light = document.querySelector('.icon-light') as HTMLElement;
    if (dark && light) {
      dark.style.display = theme === 'dark' ? 'none' : 'inline';
      light.style.display = theme === 'light' ? 'none' : 'inline';
    }
  }

  function toggle() {
    const current = document.documentElement.getAttribute('data-theme') || 'dark';
    const next = current === 'dark' ? 'light' : 'dark';
    document.documentElement.setAttribute('data-theme', next);
    localStorage.setItem('theme', next);
    updateIcon(next);
  }

  initTheme();

  const btn = document.getElementById('theme-toggle');
  if (btn) btn.addEventListener('click', toggle);
</script>

<style>
  .theme-toggle {
    position: fixed;
    top: 0.75rem;
    right: 1rem;
    z-index: 1000;
    background: transparent;
    border: none;
    color: var(--fg);
    font-size: 1.25rem;
    cursor: pointer;
    padding: 0.25rem;
    line-height: 1;
  }

  .theme-toggle:hover {
    opacity: 0.7;
  }
</style>
