---
// Previous/Next post navigation
interface Post {
  url: string;
  title: string;
}

interface Props {
  prevPost?: Post | null;
  nextPost?: Post | null;
}

const { prevPost, nextPost } = Astro.props;
---

<nav class="post-nav">
  <div class="nav-item">
    {prevPost ? (
      <a href={prevPost.url}>← {prevPost.title}</a>
    ) : (
      <span class="empty">—</span>
    )}
  </div>
  
  <div class="nav-item right">
    {nextPost ? (
      <a href={nextPost.url}>{nextPost.title} →</a>
    ) : (
      <span class="empty">—</span>
    )}
  </div>
</nav>

<style>
  .post-nav {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem 0;
    border-top: 1px solid var(--fg-d);
    margin-top: 1.5rem;
    font-size: 0.85rem;
  }
  
  .nav-item {
    flex: 1;
    min-width: 0;
  }
  
  .nav-item.right {
    text-align: right;
  }
  
  .nav-item a {
    color: var(--fg);
    text-decoration: none;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .nav-item a:hover {
    text-decoration: underline;
  }
  
  .empty {
    color: var(--fg-d);
  }
  
  @media (max-width: 500px) {
    .post-nav {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .nav-item.right {
      text-align: left;
    }
  }
</style>
