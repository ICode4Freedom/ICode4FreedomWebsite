---
// Related posts
interface Post {
  url: string;
  title: string;
  tags: string[];
  pubDate: Date;
}

interface Props {
  currentUrl: string;
  currentTags: string[];
  allPosts: Post[];
  maxPosts?: number;
}

const { currentUrl, currentTags, allPosts, maxPosts = 3 } = Astro.props;

const relatedPosts = allPosts
  .filter(post => post.url !== currentUrl)
  .map(post => ({
    ...post,
    matchCount: post.tags.filter(tag => currentTags.includes(tag)).length
  }))
  .filter(post => post.matchCount > 0)
  .sort((a, b) => b.matchCount - a.matchCount)
  .slice(0, maxPosts);
---

{relatedPosts.length > 0 && (
  <div class="related">
    <h3 class="related-title">Related</h3>
    <ul class="related-list">
      {relatedPosts.map((post) => (
        <li>
          <a href={post.url}>{post.title}</a>
        </li>
      ))}
    </ul>
  </div>
)}

<style>
  .related {
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--fg-d);
  }
  
  .related-title {
    font-size: 0.85rem;
    color: var(--fg-d);
    margin: 0 0 0.75rem 0;
    font-weight: normal;
  }
  
  .related-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .related-list li {
    margin: 0.4rem 0;
  }
  
  .related-list a {
    font-size: 0.9rem;
    color: var(--fg);
    text-decoration: none;
  }
  
  .related-list a:hover {
    text-decoration: underline;
  }
</style>
