---
// Related posts component - shows posts with matching tags
interface Post {
  url: string;
  title: string;
  tags: string[];
  pubDate: Date;
}

interface Props {
  currentUrl: string;
  currentTags: string[];
  allPosts: Post[];
  maxPosts?: number;
}

const { currentUrl, currentTags, allPosts, maxPosts = 3 } = Astro.props;

// Find related posts based on tag overlap
const relatedPosts = allPosts
  .filter(post => post.url !== currentUrl)
  .map(post => ({
    ...post,
    matchCount: post.tags.filter(tag => currentTags.includes(tag)).length
  }))
  .filter(post => post.matchCount > 0)
  .sort((a, b) => b.matchCount - a.matchCount)
  .slice(0, maxPosts);
---

{relatedPosts.length > 0 && (
  <div class="related-posts">
    <h3 class="related-title">
      <span class="hash">#</span> Related Posts
    </h3>
    <ul class="related-list">
      {relatedPosts.map((post) => (
        <li>
          <a href={post.url}>
            <span class="post-title">{post.title}</span>
            <span class="post-tags">
              {post.tags.slice(0, 2).map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </span>
          </a>
        </li>
      ))}
    </ul>
  </div>
)}

<style>
  .related-posts {
    margin: 2rem 0;
    padding: 1.5rem;
    border: 1px solid var(--fg-d);
    background: var(--ui-bg);
  }
  
  .related-title {
    font-size: 1rem;
    color: var(--fg);
    margin: 0 0 1rem 0;
    font-weight: normal;
  }
  
  .hash {
    color: var(--terminal-green);
  }
  
  .related-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .related-list li {
    padding: 0;
    margin: 0;
  }
  
  .related-list a {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    text-decoration: none;
    color: var(--fg);
    border-left: 2px solid transparent;
    transition: all 0.2s;
  }
  
  .related-list a:hover {
    border-left-color: var(--terminal-green);
    background: rgba(0, 255, 0, 0.05);
    padding-left: 1rem;
  }
  
  .post-title {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-right: 1rem;
  }
  
  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }
  
  .tag {
    font-size: 0.7rem;
    padding: 0.2rem 0.5rem;
    background: var(--bg);
    border: 1px solid var(--fg-d);
    color: var(--fg-d);
  }
  
  @media (max-width: 600px) {
    .related-list a {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
    
    .post-title {
      white-space: normal;
    }
  }
</style>
